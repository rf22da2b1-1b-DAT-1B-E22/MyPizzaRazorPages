@page
@model MyPizzaRazorPages.Pages.Pizzas.EditPizzaModel
@{
}
<h1>Ændre Pizza nummer @Model.Number @Model.Name</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <input type="hidden" asp-for="@Model.Number" class="form-control" /><br>
            </div>

            <div class="form-group">
                <label>Navn</label><br>
                <input asp-for="@Model.Name" class="form-control" /><br />
            </div>

            <div class="form-group">
                <label>Beskrivelse</label><br>
                <input asp-for="@Model.Description" class="form-control" /><br />
            </div>

            <div class="form-group">
                <label>Pris</label><br>
                <input asp-for="@Model.Price" class="form-control" /><br />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Vegansk</label><br>
                <input asp-for="@Model.IsVegan" /><br />
            </div>

            <div class="form-group">
                <label>DeepPan</label><br>
                <input asp-for="@Model.DeepPan" /><br />
            </div>

            <form method="post">
                <div class="form-group">
                    <input type="submit" value="Edit Pizza" asp-page-handler="Edit" asp-route-id="@Model.Number" class="btn btn-success" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Fortryd" asp-page-handler="Fortryd" class="btn btn-primary" />
                </div>
            </form>

        </form>
    </div>
</div>