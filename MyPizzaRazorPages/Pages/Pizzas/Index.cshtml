@page
@model MyPizzaRazorPages.Pages.Pizzas.IndexModel
@{
}
<h1>Hej dette er Pizza siden</h1>

<table class="table table-hover">
    <thead>
        <tr>
        <th>Nummer</th>
        <th>Navn</th>
        <th>Beskrivelse</th>
        <th>Pris</th>
        <th>Vegansk</th>
        <th>DeepPan</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Pizzaer)
        {
            <tr>
                <td>@p.Number</td>
                <td>@p.Name</td>
                <td>@p.Description</td>
                <td>@p.Price</td>
                <td>@p.IsVegan</td>
                <td>@p.DeepPan</td>

                <td><a asp-page="DeletePizza" asp-route-id="@p.Number">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

<p>Hvis du vil oprette en ny pizza følg link</p>
<a asp-page="CreatePizza">Opret Pizza</a> 

    
